<Window x:Class="MarathonSkills.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarathonSkills"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Style="{DynamicResource base_window}">
    <Grid>
        <Rectangle Fill="{StaticResource dark_grey}"  HorizontalAlignment="Center" Height="70" Margin="0,364,0,0"  VerticalAlignment="Top" Width="800"/>
        <Label x:Name="label_timer" Foreground="White" Content="{Binding Time, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" HorizontalContentAlignment="Center" Margin="10,364,0,0" VerticalContentAlignment="Center"/>
        <Frame Content="Frame" Source="/Page1.xaml" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
